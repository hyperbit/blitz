<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<% if current_user %>
  <%= link_to "New Ebook", new_ebook_path, class: "btn btn-primary" %>
  <br />
  <br />
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Download Link</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @ebooks.each do |ebook| %>
        <tr>
          <td><%= ebook.title %></td>
          <td><%= link_to "View Ebook", ebook_path(ebook) %></td>
          <td><%= button_to "Delete",  ebook, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{ebook.title}?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>